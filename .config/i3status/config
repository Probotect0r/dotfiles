general {
    output_format = "i3bar"
    interval = 5
    colors = true
    color_good = "#b9ca4a"
    color_bad = "#d54e53"
    }

order += "ethernet enp5s0"
order += "wireless wlp4s0"
order += "cpu_usage"
order += "battery 0"
order += "volume master"
order += "tztime local"

tztime local {
  format = "%Y-%m-%d %H:%M"

}

ethernet enp5s0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "E: %ip"
  format_down = "E: down"

}

wireless wlp4s0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"

}

battery 0 {
  format = "%status %percentage"
  format_down = "No battery"
  status_chr = "⚇ CHR"
  status_bat = "⚡ BAT"
  status_full = "☻ FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

cpu_usage {
  format = "CPU: %usage"
}

volume master {
  format = "  %volume"
  format_muted = "  Muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
